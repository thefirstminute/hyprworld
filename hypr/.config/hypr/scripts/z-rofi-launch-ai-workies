#!/bin/bash

# Name -> Command
declare -A apps=(
    ["AI Dungeon"]="thorium-browser --app=https://play.aidungeon.io/"
    ["ChatGPT"]="thorium-browser --app=https://chatgpt.com"
    ["ChatSonic"]="thorium-browser --app=https://www.writesonic.com/chatsonic"
    ["Copilot"]="thorium-browser --app=https://copilot.microsoft.com"
    ["Duck AI"]="thorium-browser --app=https://duck.ai"
    ["Gemini"]="thorium-browser --app=https://gemini.google.com"
    ["Grok"]="thorium-browser --app=https://grok.com"
    ["OpenAI Playground"]="thorium-browser --app=https://platform.openai.com/examples"
    ["Perplexity"]="thorium-browser --app=https://perplexity.com"
)

# Build sorted list of names
options=$(printf "%s\n" "${!apps[@]}" | sort)

# Show menu with sane matching
chosen=$(printf "%s\n" "$options" | rofi -dmenu -p "Launch AI App:" -matching normal -i)

# Launch
if [[ -n "$chosen" ]]; then
    ${apps["$chosen"]}
fi

